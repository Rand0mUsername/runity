<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="0dp"
    android:background="#ffffff"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:ignoreGravity="@drawable/bgr_plain3"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="false"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/bgr_plain3" />

    <LinearLayout
        android:id="@+id/main_content_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/upper_dock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/dock" >

            <LinearLayout
                android:id="@+id/upper_helper"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:src="@drawable/phantom" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/logo_a" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:src="@drawable/phantom" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mid_dock_helper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8" >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.42"
                android:src="@drawable/phantom" />

            <LinearLayout
                android:id="@+id/mid_dock"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:src="@drawable/phantom" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.10"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:src="@drawable/username" />

                <EditText
                    android:id="@+id/login_editText_username"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                   
                     android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:inputType="text"
                    android:maxLength="30"
                    android:gravity="center"
                    android:ellipsize="start"
                     android:ems="7"
                     />
      

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"
                    android:src="@drawable/phantom" />

                <ImageView
                    android:id="@+id/josnekirandomfantom"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.10"
                    android:adjustViewBounds="false"
                    android:src="@drawable/pass" />

                <EditText
                    android:id="@+id/login_editText_password"
                    android:layout_width="fill_parent"
                    android:singleLine="true"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:ems="7"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$/^&apos;\*()-&apos;:;,?."
                    android:maxLines="1"
                    android:lines="1"
                    android:maxLength="20"
                    
                    android:gravity="center"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.50"
                    android:src="@drawable/phantom" />

            </LinearLayout>

            <ImageView
                android:id="@+id/randomfantom"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.42"
                android:src="@drawable/phantom" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lower_dock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
             android:clickable="true"
            android:background="@drawable/dock"
            android:baselineAligned="false"
            android:gravity="bottom" >

            <ImageView
                android:id="@+id/fantomcina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:src="@drawable/phantom" />

            <ImageView
                android:id="@+id/login_imageView_login"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.20"
                 android:clickable="true"
                android:src="@drawable/proceed_red_selecter" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:src="@drawable/phantom" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/registration_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:src="@drawable/phantom" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" >

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.1"
                android:src="@drawable/phantom" />

            <ImageView
                android:id="@+id/login_imageView_signup"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.3"
                android:src="@drawable/registruj" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.1"
                android:src="@drawable/phantom" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:src="@drawable/phantom" />

    </LinearLayout>

</RelativeLayout>