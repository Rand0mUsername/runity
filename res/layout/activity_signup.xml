<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="0dp"
    android:background="#ffffff"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:ignoreGravity="@drawable/bgr_plain3"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="false"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/bgr_plain3" />

    <LinearLayout
        android:id="@+id/main_content_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/upper_dock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/dock" >

            <LinearLayout
                android:id="@+id/upper_helper"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:src="@drawable/phantom" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/logo_a" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:src="@drawable/phantom" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mid_dock_helper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8" >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.42"
                android:src="@drawable/phantom" />

            <LinearLayout
                android:id="@+id/mid_dock"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/josnekirandomfantom"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"
                    android:src="@drawable/phantom" />

                <ImageView
                    android:id="@+id/ImageView06"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.10"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:src="@drawable/ime" />

                <EditText
                    android:id="@+id/signup_editText_name"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.12"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                     android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:inputType="text"
                    android:maxLength="30"
                    android:gravity="center"
                    android:ellipsize="start"
                     android:ems="7"/>

                    <ImageView
                        android:id="@+id/ImageView05"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.10"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:src="@drawable/prezime" />

                    <EditText
                        android:id="@+id/signup_editText_surname"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.12"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                       
                        android:ems="5"
                        android:singleLine="true"
                     
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:maxLength="30"
                        android:gravity="center"
                        android:ellipsize="start"
                    
                        
                        
                        
                        
                         />

                    <ImageView
                        android:id="@+id/ImageView04"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.10"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:src="@drawable/username" />

                    <EditText
                        android:id="@+id/signup_editText_username"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.12"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
                          android:ems="5"
                        android:singleLine="true"
                        
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:maxLength="30"
                        android:gravity="top|center_horizontal"
                        android:ellipsize="start" />

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.10"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:src="@drawable/pass" />

                    <EditText
                        android:id="@+id/signup_editText_password"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.12"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$/^&apos;\*()-&apos;:;,?."
                         android:ems="5"
                        android:singleLine="true"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                       
                        android:gravity="center"
                        android:ellipsize="start"/>

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.10"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:src="@drawable/email" />

                    <EditText
                        android:id="@+id/signup_editText_email"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.12"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!_@#$/^&apos;\*()-&apos;:;,?."
                         android:ems="5"
                        android:singleLine="true"
                       
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:maxLength="30"
                        android:gravity="center"
                        android:ellipsize="start"/>

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.10"
                        android:adjustViewBounds="false"
                        android:src="@drawable/starost" />

                    <EditText
                        android:id="@+id/signup_editText_birthyear"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.12"
                        android:ems="5"
                        android:singleLine="true"
                        
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:maxLength="30"
                        android:gravity="center"
                        android:ellipsize="start" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.05"
                        android:src="@drawable/phantom" />
            </LinearLayout>

            <ImageView
                android:id="@+id/randomfantom"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.42"
                android:src="@drawable/phantom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lower_dock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
             android:clickable="true"
            android:background="@drawable/dock"
            android:baselineAligned="false"
            android:gravity="bottom" >

            <ImageView
                android:id="@+id/fantomcina"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:src="@drawable/phantom" />

            <ImageView
                android:id="@+id/signup_imageView_signup"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.2"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                 android:clickable="true"
                android:src="@drawable/proceed_red_selecter" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:src="@drawable/phantom" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>