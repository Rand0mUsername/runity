<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp" >
<!-- ratio za donji dock 050205 --> 
    <RelativeLayout
        android:id="@+id/layout_item_route"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"> 
        <LinearLayout
            android:id="@+id/layout_route_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >
 
            <TextView
                android:id="@+id/lbl_route_datetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="vreme"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
 
            <TextView
                android:id="@+id/txt_route_datetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
        </LinearLayout>
 
        <LinearLayout
            android:id="@+id/layout_route_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_route_datetime"
            android:orientation="horizontal" >
 
            <TextView
                android:id="@+id/lbl_route_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="udaljenost"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
 
            <TextView
                android:id="@+id/txt_route_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
        </LinearLayout>
 
        <LinearLayout
            android:id="@+id/layout_route_runner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_route_distance"
            android:orientation="horizontal" >
 
            <TextView
                android:id="@+id/lbl_route_runner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="kreator"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
 
            <TextView
                android:id="@+id/txt_route_runner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_route_attend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_route_runner"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_route_attend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="broj ljudi"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_route_attend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />

        </LinearLayout>

    </RelativeLayout>
 
</LinearLayout>